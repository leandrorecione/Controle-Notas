generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Aluno {
  id       Int      @id @default(autoincrement())
  nome     String
  notas    Nota[]
}

model Professor {
  id       Int      @id @default(autoincrement())
  nome     String
}

model Nota {
  id        Int     @id @default(autoincrement())
  alunoId   Int
  bimestre  Int     // 1 a 4
  valor     Float
  aluno     Aluno   @relation(fields: [alunoId], references: [id])
}
